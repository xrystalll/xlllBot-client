{
  "compilerOptions": {
    "baseUrl": "src/",
    "sourceMap": false,
    "paths": {
      "components/*": ["src/components/*"],
      "hooks/*": ["src/hooks/*"],
      "routes/*": ["src/routes/*"],
      "store/*": ["src/store/*"],
      "support/*": ["src/support/*"]
    },
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}